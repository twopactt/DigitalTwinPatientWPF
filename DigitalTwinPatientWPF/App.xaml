<Application x:Class="DigitalTwinPatientWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DigitalTwinPatientWPF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Calibri" />
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="Calibri" />
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="FontFamily" Value="Calibri" />
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="FontFamily" Value="Calibri" />
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="FontFamily" Value="Calibri" />
        </Style>
        
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Calibri" />
            <Setter Property="Background" Value="#6FCFC3" />
            <Setter Property="BorderBrush" Value="Green" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <!-- 
        <Style TargetType="Border">
            <Setter Property="Background" Value="#D2E0FB" />
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="2" />
        </Style>
        -->


        <Style TargetType="DataGridRow">
            <Setter Property="ContextMenu">
                <Setter.Value>
                    <ContextMenu>
                        <MenuItem Header="Открыть карту" Padding="5">
                            <MenuItem.Icon>
                                <TextBlock Text="📋" FontSize="16"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Создать назначение" Padding="5">
                            <MenuItem.Icon>
                                <TextBlock Text="💊" FontSize="16"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Запланировать визит" Padding="5">
                            <MenuItem.Icon>
                                <TextBlock Text="📅" FontSize="16"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="Экспорт данных" Padding="5">
                            <MenuItem.Icon>
                                <TextBlock Text="📤" FontSize="16"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Быстрая заметка" Padding="5">
                            <MenuItem.Icon>
                                <TextBlock Text="📝" FontSize="16"/>
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <DataTrigger Binding="{Binding RiskLevel}" Value="High">
                    <Setter Property="Background" Value="#FFE6B3B3" />
                    <Setter Property="ToolTip" Value="Хронический пациент" />
                </DataTrigger>
                <DataTrigger Binding="{Binding RiskLevel}" Value="Medium">
                    <Setter Property="Background" Value="#FFF9E6B3"/>
                    <Setter Property="ToolTip" Value="Подтвержденный диагноз"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding RiskLevel}" Value="Low">
                    <Setter Property="Background" Value="#E6F0E6"/>
                    <Setter Property="ToolTip" Value="Наблюдение"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>
